{
  "hosting": {
    "public": "release",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites":[
      { "source": "**", "destination": "/index.html" },
      {"source":"/api/**", "function":"main"}
    ]

  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
